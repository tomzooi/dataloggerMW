<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16px"
    android:paddingLeft="16px"
    android:paddingRight="16px"
    android:paddingTop="16px">

  <LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:orientation="vertical"
      android:layout_alignParentBottom="true"
      android:layout_alignParentStart="true">

      <TextView android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:text=" " />

      <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:text="Cellbots Data Logger" android:textSize="30dip"
        android:gravity="center_horizontal" />

      <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
      android:text=" " android:textSize="1dip" android:background="#FFFFFFFF" />
    <TextView android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:text=" " />
    <Button android:id="@+id/launchLocalServer" android:layout_width="fill_parent"
      android:layout_height="wrap_content" android:text="Local Server Controls" />
    <TextView android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:text=" " />
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
      android:text=" " android:textSize="1dip" android:background="#FFFFFFFF" />
    <TextView android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:text=" " />


    <TextView android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:text="Record video"
      android:textSize="20dip" />
    <TextView android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:text=" " />
    <Button android:id="@+id/launchVideoFront" android:layout_width="fill_parent"
      android:layout_height="wrap_content" android:text="Use front camera" />
    <TextView android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:text=" " />
    <Button android:id="@+id/launchVideoBack" android:layout_width="fill_parent"
      android:layout_height="wrap_content" android:text="Use back camera" />
    <TextView android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:text=" " />
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
      android:text=" " android:textSize="1dip" android:background="#FFFFFFFF" />
    <TextView android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:text=" " />

    <TextView android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:text="Take pictures"
      android:textSize="20dip" />
    <LinearLayout android:layout_width="fill_parent"
      android:layout_height="wrap_content" android:orientation="horizontal">
      <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Delay between shots (seconds):" />
      <EditText android:id="@+id/pictureDelay" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_weight="1"
        android:inputType="number" android:text="30" />
    </LinearLayout>
    <TextView android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:text=" " />
    <Button android:id="@+id/launchPicture" android:layout_width="fill_parent"
      android:layout_height="wrap_content" android:text="Use back camera" />

    <TextView android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:text=" " />
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
      android:text=" " android:textSize="1dip" android:background="#FFFFFFFF" />
    <TextView android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:text=" " />
    <CheckBox android:layout_width="fill_parent" android:layout_height="wrap_content"
      android:checked="true" android:id="@+id/useZip" android:text="Zip and split data into 50MB chunks."></CheckBox>



  </LinearLayout>
</RelativeLayout>


